<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Name="flyOut"
    x:Class="sdv.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:sdv"
    xmlns:views="clr-namespace:sdv.Views"
    xmlns:controls="clr-namespace:sdv.Controls"
    Shell.FlyoutBehavior="Flyout"
    Title="Spacial Data Viewer"
    Shell.FlyoutIcon="menu_icon.png"
    Shell.FlyoutWidth="200" >

    <Shell.FlyoutHeader>
        <controls:FlyoutHeader/>
    </Shell.FlyoutHeader>


    <Shell.FlyoutBackground>
        <LinearGradientBrush>
            <GradientStop
                          Offset="0.1" Color="#7F463CAB" />
            <GradientStop Color="#7F211C52"
                          Offset="1.0" />
        </LinearGradientBrush>
    </Shell.FlyoutBackground>
    


    <FlyoutItem Title="Dashboard" Icon="menu_icon.png">
        <ShellContent 
            ContentTemplate="{DataTemplate views:DashboardPage}"
        />
    </FlyoutItem>


    <FlyoutItem Title="Settings" Icon="menu_icon.png">
        <ShellContent 
            ContentTemplate="{DataTemplate views:SettingsPage}"
        />
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <controls:FlyoutFooter/>
    </Shell.FlyoutFooter>

</Shell>
