<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Name="flyOut"
    x:Class="sdv.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:sdv"
    xmlns:views="clr-namespace:sdv.Views"
    xmlns:controls="clr-namespace:sdv.Controls"
    Shell.FlyoutBehavior="Flyout"
    Title="Spacial Data Viewer"
    Shell.FlyoutIcon="menu_icon.png"
    FlyoutBackgroundImage="menu_icon.png">

    <Shell.FlyoutHeader>
        <controls:FlyoutHeader/>
    </Shell.FlyoutHeader>
    
    <FlyoutItem Title="Dashboard" Icon="menu_icon.png">
        <ShellContent 
            ContentTemplate="{DataTemplate views:DashboardPage}"
        />
    </FlyoutItem>


    <FlyoutItem Title="Settings" Icon="menu_icon.png">
        <ShellContent 
            ContentTemplate="{DataTemplate views:SettingsPage}"
        />
    </FlyoutItem>

    <Shell.FlyoutFooter>
        <controls:FlyoutFooter/>
    </Shell.FlyoutFooter>

</Shell>
