<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:sdv.Views"
             x:Class="sdv.Views.ImageryPage"
             Title="ImageryPage">
    <RefreshView>
        <ScrollView>
            <Grid BackgroundColor="Transparent">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Border
                    Padding="24,32"
                    BackgroundColor="{StaticResource FrameBackgroundColor}"
                    Stroke="{StaticResource BorderColor}"
                    HorizontalOptions="Fill"
                    VerticalOptions="End"
                    Margin="1">

                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="24"/>
                    </Border.StrokeShape>
                    
                    <Label Text="Imagery" FontSize="30" HorizontalOptions="Center" Grid.Row="0" />
                </Border>
                
                
                <!--childpage-->
                <views:ImageryChildPage Grid.Row="1" />
                
            </Grid>
        </ScrollView>
    </RefreshView>
</ContentPage>
