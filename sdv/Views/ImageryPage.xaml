<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:sdv.Views"
             x:Class="sdv.Views.ImageryPage"
             Title="ImageryPage">
    <RefreshView>
        <ScrollView>
            <Grid Background="Red">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <Label Text="Imagery" FontSize="30" HorizontalOptions="Center" Grid.Row="0" />
                <views:ImageryChildPage Grid.Row="1" />
            </Grid>
        </ScrollView>
    </RefreshView>
</ContentPage>
